{
  "manifest_version": 3,
  "version": "1.0.0",
  "name": "Crypto Twitter Scam Shield",
  "description": "Scans X/Twitter, marking usernames green if they're in your following list and marking red those closely resembling or not in your list to help you avoid scams.",
  "icons": {
    "128": "/icon-128.png"
  },
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "128": "/icon-128.png"
    }
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "host_permissions": ["https://*.twitter.com/"],
  "permissions": [
    "identity",
    "identity.email",
    "activeTab",
    "scripting",
    "storage",
    "webNavigation"
  ]
}
